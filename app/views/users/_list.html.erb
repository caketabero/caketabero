<% if current_user.admin_flag %>
  <div class="container button__container">
    <%= form_with url: sort_users_path, method: :get, local: false do |f| %>
      <%= f.submit '全員', id: 'everyone-button', class: 'button' %>
      <%= f.submit '管理者', id: 'admin-button', class: 'button' %>
      <%= f.submit '顧客', id: 'customer-button', class: 'button' %>
    <% end %>
  </div>
<% end %>

<div class="container">
  <ul class="userlist">
    <% users.each do |user| %>
      <% if user.admin_flag && !current_user.admin_flag %>
        <% next %>
      <% end %>

      <% if user.id == current_user.id %>
        <li class="userlist__item currentuser">
          <%= link_to user.name, edit_user_path(user.id) %>
        </li>
      <% else %>
        <li class="userlist__item">
          <%= user.name %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>